<% provide(:title, @book.title) %>
<div class="row">
  <div class="col-md-9">
    <div class="card mb-15">
      <div class="card-header ">
        <%= @book.title %>
      </div>
      <div class="card-body row">
        <div class="col-md-4 cover">
          <%= image_tag(@book.image.url, class: "thumbbook") if @book.image? %>
        </div>
        <div class="col-md-8">
          <h1 class="ebook_title text-primary"> <%= @book.title %> </h1>
          <h5 class="fontsize14"><i class="fa fa-user"></i> <%= t(".author") %> : <%= @book.author %> </h5>
          <h5 class="fontsize14"><i class="fa fa-book"></i> <%= t(".cate") %> : <%= @book.cate.title %> </h5>
          <h5 class="fontsize14"><i class="fa fa-eye"></i> <%= t(".view") %> : 99999 </h5>
        </div>
        <div class="col-md-12 description text-justify">
          <%=raw @book.description %>
        </div>
      </div>
      <hr>
      <h4 class="list-pages"><%= t(".list-pages") %></h4>
      <hr>
      <ul class="chapter-list">
        <% Chapter.all.each do |chapter| %>
          <li>
            <%= link_to chapter.title, chapter_path(chapter) %>
          </li>
          <hr>
        <% end %>
      </ul>
    </div>
  </div>
  <%= render "layouts/client/sidebar" %>
</div>
