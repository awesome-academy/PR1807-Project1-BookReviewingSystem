<% provide :title, t(".title") %>
<div class="container-fluid bg-light py-3">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card card-body">
        <h3 class="text-center mb-4"><%= yield(:title) %></h3>
        <fieldset>
          <%= form_for(:session, url: login_path) do |f| %>
            <div class="form-group ">
                <%= f.text_field :email, class: "form-control input-lg",
                  placeholder: t(".placeholder-email") %>
            </div>
            <div class="form-group ">
                <%= f.password_field :password, class: "form-control input-lg",
                  placeholder: t(".placeholder-password") %>
            </div>
            <%= f.label :remember_me, class: "checkbox inline" do %>
              <%= f.check_box :remember_me %>
              <span><%= t(".text-remember") %></span>
            <% end %>
            <%= f.submit t(".title"), class: "btn btn-lg btn-primary btn-block" %>
            <% end %>
        </fieldset>
      </div>
    </div>
  </div>
</div>
