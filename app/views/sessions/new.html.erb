<% provide :title, "Log in" %>
<div class="container-fluid bg-light py-3">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card card-body">
        <h3 class="text-center mb-4"><%= yield(:title) %></h3>
        <fieldset>
          <%= form_for(:session, url: login_path) do |f| %>
            <div class="form-group ">
                <%= f.text_field :email, class: "form-control input-lg", placeholder: "E-mail Address"   %>
            </div>
            <div class="form-group ">
                <%= f.password_field :password, class: "form-control input-lg", placeholder: "Enter Password" %>
            </div>
            <%= f.label :remember_me, class: "checkbox inline" do %>
              <%= f.check_box :remember_me %>
              <span>Remember me on this computer</span>
            <% end %>
            <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
            <% end %>
        </fieldset>
      </div>
    </div>
  </div>
</div>
