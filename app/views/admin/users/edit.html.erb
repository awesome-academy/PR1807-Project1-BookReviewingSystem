<% provide :title, t(".title") %>
<% provide :button_text, t(".button-text") %>
<div class="container-fluid bg-light py-3">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card card-body">
        <h3 class="text-center mb-4"><%= yield(:title) %></h3>
        <fieldset>
          <%= form_for [:admin, @user] do |f| %>
            <div class="form-group ">
              <%= f.text_field :name, class: "form-control input-lg",
                placeholder: t(".placeholder-name") %>
            </div>
            <div class="form-group ">
              <%= f.text_field :email, class: "form-control input-lg",
                placeholder: t(".placeholder-email") %>
            </div>
            <div class="form-group ">
              <%= f.text_field :mobile, class: "form-control input-lg",
                placeholder: t(".placeholder-phone") %>
            </div>
            <div class="form-group ">
              <%= f.text_field :address, class: "form-control input-lg",
                placeholder: t(".placeholder-address") %>
            </div>
            <div class="form-group">
              <%= f.date_field :birthdate, class: 'form-control input-lg' %>
            </div>
            <div class="form-group ">
              <%= f.password_field :password, class: "form-control input-lg",
                placeholder: t(".placeholder-password") %>
            </div>
            <div class="form-group ">
              <%= f.password_field :password_confirmation,
                class: "form-control input-lg", placeholder: t(".placeholder-repassword") %>
            </div>
            <div class ="form-group">
              <%= f.label :image , :class => "col-md-4 control-label" %>
              <div class="col-md-4">
                <div class="input-group">
                  <%= f.file_field :image %>
                  <%= f.hidden_field :image_cache %>
                </div>
                <% if @user.image? %>
                  <%= image_tag @user.image.url %>
                  <div>
                    <%= label_tag :remove_image do %>
                      <%= f.check_box :remove_image %>
                      <%= t(".remove-image") %>
                    <% end %>
                  </div>
                <%end %>
              </div>
            </div>
            <%= f.submit yield(:button_text), class: "btn btn-lg btn-primary btn-block" %>
            <% end %>
        </fieldset>
      </div>
    </div>
  </div>
</div>
