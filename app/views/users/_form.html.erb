<div class="container-fluid bg-light py-3">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card card-body">
        <h3 class="text-center mb-4"><%= yield(:title)%></h3>

        <fieldset>
          <%= form_for @user  do |f| %>
            <div class="form-group ">
              <%= f.text_field :name, class: "form-control input-lg", placeholder: "Your Name" %>
            </div>
            <div class="form-group ">
              <%= f.text_field :email, class: "form-control input-lg", placeholder: "E-mail Address" %>
            </div>
            <div class="form-group ">
              <%= f.text_field :mobile, class: "form-control input-lg", placeholder: "Phone number" %>
            </div>
            <div class="form-group ">
              <%= f.text_field :address, class: "form-control input-lg", placeholder: "Phone number" %>
            </div>
            <div class="form-group ">
              <%= f.password_field :password, class: "form-control input-lg", placeholder: "Enter Password" %>
            </div>
            <div class="form-group ">
              <%= f.password_field :password_confirmation, class: "form-control input-lg", placeholder: "Confirm Password" %>
            </div>
            <%= f.submit yield(:button_text), class: "btn btn-lg btn-primary btn-block" %>
            <% end %>
        </fieldset>
      </div>
    </div>
  </div>
</div>
