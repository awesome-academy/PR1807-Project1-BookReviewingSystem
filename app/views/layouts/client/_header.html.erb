<div class="header">
  <nav class="navbar bg-dark navbar-dark">
    <%= link_to "Booksreview", root_path , class: "logo"%>
    <form class="form-inline" action="/">
      <input class="form-control mr-sm-2" type="text" placeholder="Search">
      <button class="btn btn-success" type="submit">Search</button>
    </form>

    <% if logged_in? %>
      <%= link_to logout_path, :method => :delete do %>
        <%= content_tag :i, "", :class => "icon-logout"%> Logout
      <%end%>
      <%= link_to current_user  do %>
        <%= content_tag :i, "", :class => "icon-user"%> <%= current_user.name%>
      <%end%>
    <% else %>
      <div class="boxreg">
      <%= link_to "Sign up", signup_path , class: "btn btn-primary" %>
      <%= link_to "Sign in", "/" , class: "btn btn-danger" %>
    </div>
    <% end -%>
  </nav>
</div>

